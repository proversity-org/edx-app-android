<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/third_party_oauth_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/social_auth_bottom_margin"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/saml_button"
            style="@style/edX.Widget.SignInButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@color/edx_brand_primary_base"
            android:focusable="true" />

        <View
            android:id="@+id/view_padding"
            android:layout_width="6dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/oauth_button"
            style="@style/edX.Widget.SignInButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@color/edx_brand_primary_base"
            android:focusable="true" />

    </LinearLayout>
</layout>
